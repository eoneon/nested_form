<h1>New Item</h1>
<%= form_for @item do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  Mounting Type:
  <p>
    <%= f.fields_for :items_mountings do |mounting_form| %>
      <%= mounting_form.label :mounting_id %>
      <%= mounting_form.number_field :mounting_id %>
    <% end %>
  </p>
  <div class="actions"><%= f.submit "Save" %></div>
<% end %>
