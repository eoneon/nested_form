<h1>New Item</h1>
<div>
  <%= form_for @item do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div>Art Type:
      <%= f.fields_for :categories do |category| %>
        <%= category.label :description_id %>
        <%= collection_select(:description, :id, Description.all, :id, :element) %>
      <% end %>
    </div>
    <%= f.submit "Save" %>
  <% end %>
</div>
